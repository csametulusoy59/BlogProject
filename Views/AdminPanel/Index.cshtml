@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🌟 Admin Paneli 🌟</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">✍️ Yeni Yazı Ekle</h5>
                    <p class="card-text">Yeni bir blog yazısı oluştur.</p>
                    <a href="/Blog/Create" class="btn btn-primary">Yazı Ekle</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">📝 Yorumları Yönet</h5>
                    <p class="card-text">Tüm yorumları görüntüle ve yönet.</p>
                    <a href="/Comment/Manage" class="btn btn-warning">Yorumları Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">👥 Kullanıcıları Gör</h5>
                    <p class="card-text">Kayıtlı kullanıcı listesini görüntüle.</p>
                    <a href="/Account/Users" class="btn btn-success">Kullanıcıları Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>
